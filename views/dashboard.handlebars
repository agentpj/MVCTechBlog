<div >
  <h1>
      Your Dashboard
  </h1>
    <h2>Welcome, {{name}}!</h2>
</div>

<div>
  <div class="card mb-6">
    <h4>Create a New Blog:</h4>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
  
      <div class="form-group">
        <label for="blog-desc">Content:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  
  <div class= "card md-6 blog-list">
    <h4>Current Blogs:</h4>

    {{#each blogs as |blog|}}
    <div class="mb-2">
      <p>
                <h3><a href="/blog/{{blog.id}}">{{blog.title}}</a></h3>
      </p>
      <p>
        <button class="delete-btn btn btn-sm btn-danger" data-id="{{blog.id}}">          DELETE</button>
      </p>
    </div>
    {{/each}}
  </div>
  
</div>

<script src="./js/dashboard.js"></script>
