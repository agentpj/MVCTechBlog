<div >
  <h1>
      Your Dashboard
  </h1>
    <h2>Welcome, {{name}} {{id}} !</h2>
</div>

<div>
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
  
      <div class="form-group">
        <label for="blog-desc">Content:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{!-- {{#if blog.length}} --}}
  <div class= "col-md-6 blog-list">
    <h3>Current Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <p>
                <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
      </p>
      <p>
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">          DELETE</button>
      </p>
    </div>
    {{/each}}
  </div>
  {{!-- {{/if}} --}}
</div>

<script src="./js/dashboard.js"></script>
