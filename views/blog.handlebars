<h1>
      The Tech Blog
</h1>
<div class="card">
  <h3>{{{get_emoji}}} {{title}}</h3>
  <h6>{{description}}</h6>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>

{{!-- need to add to make sure user is logged in before able to comment --}}

<form class="form new-comment-form" >
      <div class="form-group">
        <label for="comment-title">Blog Comment:</label>
        <textarea class="form-input" type="text" id="blog-comment" name="blog-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="comment-btn btn-primary" >Create</button>
      </div>
</form>

 <h4>Comments</h4>
 {{#each comments as |comment|}}
 <div class= "card">
 <h6> {{comment.description}} </h6>
 <p> Created by user: {{comment.user_id}} on {{format_date comment.date_created}}</p>
 <p>
<button type="click" class="comment-delete-btn btn btn-sm btn-danger" comment-id="{{comment.id}}">          DELETE</button>
 </p>
 </div>
 {{/each}}


<script src="/js/comment.js"></script>
